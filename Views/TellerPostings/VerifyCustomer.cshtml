@model ChealCore.Models.ViewModels.VerifyCustomerViewModel

<h4 style="margin-left:10%; margin-top:30px">Verify Customer</h4>

<div style="margin-left:10%" class="row">
    <div class="col-md-6 mb-4" style="width:50%">
        <form asp-action="verifycustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="AccountNumber" class="control-label mb-3"></label>
                <input asp-for="AccountNumber" class="form-control w-50" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>


            <div class="form-group mb-4">
                <input type="submit" value="Verify" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-6 card p-3">
        <div class="card-header">
            Customer Details
        </div>

        @if (@ViewBag != null)
        {
            <div class="card-body">
                <p>Customer ID : @ViewBag.CustomerId</p>
                <p>Account Name : @ViewBag.AccountName</p>
                <p>Account Number : @ViewBag.AccountNumber</p>
                <p>Account Type : @ViewBag.AccountType</p>
                <p>Account Balance : @ViewBag.AccountBalance</p>
                <p>Date Opened : @ViewBag.DateOpened</p>
                <p>Is Activated : @ViewBag.IsActivated</p>
            </div>
        }
        else
        {
            <p>There is no account registered!</p>
        }
    </div>

</div>

<div style="margin-left:10%">
    <a asp-action="index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}