@model IEnumerable<ChealCore.Models.TellerPosting>

@{
    ViewData["Title"] = "Index";
}

<h3 style="margin-left:20px;margin-top:20px;margin-bottom:20px">Teller Postings</h3>

<div class="row w-50" style="margin-left:20px">

    <a asp-action="Create" class="col-md-3 ">Create New</a>

    @*   <a asp-action="VaultIn" class="col-md-2">Vault In</a>

        <a asp-action="VaultOut" class="col-md-2">Vault Out</a>*@
</div>

<table class="table table-hover m-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Narration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TillAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Narration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostingType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerAccount.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TillAccount.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">View Transaction</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
