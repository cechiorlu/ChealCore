@model ChealCore.Models.TellerPosting

@{
    ViewData["Title"] = "Create";
}


<h4 style="margin-left:12%">Post Transaction</h4>

<div class="row" style="margin-left:14%">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="Narration" class="control-label"></label>
                <textarea asp-for="Narration" class="form-control"></textarea>
                <span asp-validation-for="Narration" class="text-danger"></span>
            </div>
            @*  <div class="form-group" style="margin-bottom:10px">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>*@
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="PostingType" class="control-label"></label>
                <select asp-for="PostingType" class="form-control">
                    <option value="Deposit">Deposit</option>
                    <option value="Withdrawal">Withdrawal</option>
                </select>
                <span asp-validation-for="PostingType" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="CustomerAccountID" class="control-label"></label>
                <select asp-for="CustomerAccountID" class="form-control" asp-items="ViewBag.CustomerAccountID"></select>
            </div>
            @* <div class="form-group" style="margin-bottom:10px">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
                </div>*@
            @*  <div class="form-group" style="margin-bottom:10px">
                    <label asp-for="GLAccountID" class="control-label"></label>
                    <select asp-for="GLAccountID" class ="form-control" asp-items="ViewBag.GLAccountID"></select>
                </div>*@
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Approved">Approved</option>
                    <option value="Pending">Pending</option>
                    <option value="Declined">Declined</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:12%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
