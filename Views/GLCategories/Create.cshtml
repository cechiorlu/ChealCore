@model ChealCore.Models.GLCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="my-3">
        <a asp-action="Index" class="nav-link active px-0"><i class="bi bi-arrow-left"></i> Back</a>
    </div>
    <form asp-action="Create" class="w-50 mx-auto">
        <h4>Create New GL Category</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="CodeNumber" class="form-control" hidden />
        <div class="form-group mb-3">
            <label asp-for="CategoryName" class="control-label mb-2"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CategoryDescription" class="control-label mb-2"></label>
            <input asp-for="CategoryDescription" class="form-control" />
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="mainAccountCategory" class="control-label mb-2"></label>
            <select asp-for="mainAccountCategory" class="form-control">
                <option value="Asset">Asset</option>
                <option value="Liability">Liability</option>
                <option value="Income">Income</option>
                <option value="Expenses">Expenses</option>
                <option value="Capital">Capital</option>
            </select>
            <span asp-validation-for="mainAccountCategory" class="text-danger"></span>
        </div>
        <div class="form-group form-check mb-3">
            <label class="form-check-label mb-2">
                <input class="form-check-input" role="switch" id="flexSwitchCheckDefault" asp-for="IsEnabled" type="checkbox" /> @Html.DisplayNameFor(model => model.IsEnabled)
            </label>
        </div>
        <div class="form-group mb-4">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
