@page
@model ChealCore.Models.GLCategory

@{
    ViewData["Title"] = "Create";
}


<h4 style="margin-left:35%; margin-top:30px; margin-bottom:2%">Create a new GL Category</h4>

<div style="margin-left:35%">
    <div class="col-md-12 mb-4" style="width:60%">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="control-label mb-2"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryDescription" class="control-label mb-2"></label>
                <input asp-for="CategoryDescription" class="form-control" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CodeNumber" class="control-label mb-2"></label>
                <input asp-for="CodeNumber" class="form-control" disabled />
                <span asp-validation-for="CodeNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label mb-2">
                    <input class="form-check-input" role="switch" id="flexSwitchCheckDefault" asp-for="IsEnabled" type="checkbox" /> @Html.DisplayNameFor(model => model.IsEnabled)
                </label>
            </div>
            <div class="form-group mb-3">
                <label asp-for="mainAccountCategory" class="control-label mb-2"></label>
                <select asp-for="mainAccountCategory" class="form-control">
                    <option value="Asset">Asset</option>
                    <option value="Liability">Liability</option>
                    <option value="Income">Income</option>
                    <option value="Capital">Capital</option>
                    <option value="Expenses">Expenses</option>

                </select>
                <span asp-validation-for="mainAccountCategory" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:35%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
