@model ChealCore.Models.GLCategory

@{
    ViewData["Title"] = "Edit GL Category";
}

<div class="row mt-4">
    <div class="col-md-4 mt-3">
        <h4 class="m-2" style="position:relative; left:2%; top:9px; margin-bottom:10px">Edit GL Category</h4>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group m-3">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="CategoryDescription" class="control-label"></label>
                <input asp-for="CategoryDescription" class="form-control" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="CodeNumber" class="control-label"></label>
                <input asp-for="CodeNumber" class="form-control" />
                <span asp-validation-for="CodeNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check m-3">
                <label class="form-check-label">
                    <input class="form-check-input" role="switch" id="flexSwitchCheckDefault" asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
                </label>
            </div>
            <div class="form-group m-3">
                <label asp-for="mainAccountCategory" class="control-label"></label>
                <select asp-for="mainAccountCategory" class="form-control">
                    <option value="Asset">Asset</option>
                    <option value="Liability">Liability</option>
                    <option value="Income">Income</option>
                    <option value="Capital">Capital</option>
                    <option value="Expenses">Expenses</option>

                </select>
                <span asp-validation-for="mainAccountCategory" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-left:15px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

