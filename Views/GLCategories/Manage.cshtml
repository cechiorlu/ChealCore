@model ChealCore.Models.GLCategory

@{
    ViewData["Title"] = "Edit GL Category";
}

<div class="container">
    <div class="my-3">
        <a asp-action="Index" class="nav-link active px-0"><i class="bi bi-arrow-left"></i> Back</a>
    </div>
    <form asp-action="Manage" class="mx-auto w-50">
        <h4>Edit GL Category</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryId" />
        <div class="form-group mb-3">
            <label asp-for="CategoryName" class="control-label mb-2"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CategoryDescription" class="control-label mb-2"></label>
            <input asp-for="CategoryDescription" class="form-control" />
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CodeNumber" class="control-label mb-2"></label>
            <input asp-for="CodeNumber" class="form-control" />
            <span asp-validation-for="CodeNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="mainAccountCategory" class="control-label mb-2"></label>
            <select asp-for="mainAccountCategory" class="form-control">
                <option value="Asset">Asset</option>
                <option value="Liability">Liability</option>
                <option value="Income">Income</option>
                <option value="Capital">Capital</option>
                <option value="Expenses">Expenses</option>

            </select>
            <span asp-validation-for="mainAccountCategory" class="text-danger"></span>
        </div>
        <div class="form-group form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" role="switch" id="flexSwitchCheckDefault" asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

