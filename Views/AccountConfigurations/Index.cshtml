@*@model IEnumerable<App.Models.AccountConfiguration>*@
@model ChealCore.Models.AccountConfiguration

@{
    ViewData["Title"] = "Index";
}


<h2 style="margin-left:20%; margin-top:2%"> Account Configuration</h2>

@if (Model != null)
{
    <p>

    </p>
    <div style="margin:auto; margin-bottom:20px; margin-left:15%; margin-top:20px">

        <p>
            @Html.DisplayNameFor(model => model.FinancialDate)   :   @Html.DisplayFor(model => model.FinancialDate)
        </p>

        <p>
            @Html.DisplayNameFor(model => model.IsBusinessOpen) : @Html.DisplayFor(model => model.IsBusinessOpen)
        </p>

        <div class="row">


            <div class="card col-md-5" style="margin-bottom:20px;margin-right:30px">

                <div class="card-title" style="margin-top:20px;margin-left:20px">
                    <h4>Savings Account Configuration</h4>
                </div>

                <div class="card-body">
                    <p>
                        @Html.DisplayNameFor(model => model.SavingsCreditInterestRate) :  @Html.DisplayFor(model => model.SavingsCreditInterestRate)

                    </p>


                    <p>
                        @Html.DisplayNameFor(model => model.SavingsMinimumBalance) :  @Html.DisplayFor(model => model.SavingsMinimumBalance)
                    </p>

                    <p>

                        @Html.DisplayNameFor(model => model.SavingsInterestExpenseGl) :    @Html.DisplayFor(model => model.SavingsInterestExpenseGl.AccountName)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.SavingsInterestPayableGl) :   @Html.DisplayFor(model => model.SavingsInterestPayableGl.AccountName)
                    </p>
                </div>

            </div>

            <div class="card col-md-5" style="margin-bottom:20px">

                <div class="card-title">
                    <h4>Current Account Configuration</h4>
                </div>

                <div class="card-body">
                    <p>
                        @Html.DisplayNameFor(model => model.CurrentCreditInterestRate) :  @Html.DisplayFor(model => model.CurrentCreditInterestRate)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.CurrentMinimumBalance) :    @Html.DisplayFor(model => model.CurrentMinimumBalance)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.CurrentCot) :  @Html.DisplayFor(model => model.CurrentCot)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.CurrentInterestExpenseGl) :   @Html.DisplayFor(model => model.CurrentInterestExpenseGl.AccountName)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.CurrentCotIncomeGl) :   @Html.DisplayFor(model => model.CurrentCotIncomeGl.AccountName)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.CurrentInterestPayableGl) :     @Html.DisplayFor(model => model.CurrentInterestPayableGl.AccountName)
                    </p>

                </div>
            </div>

            <div class="card col-md-5" style="margin-bottom:20px">

                <div class="card-title">

                    <h4>Loan Account Configuration</h4>
                </div>

                <div class="card-body">


                    <p>
                        @Html.DisplayNameFor(model => model.LoanDebitInterestRate) :  @Html.DisplayFor(model => model.LoanDebitInterestRate)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.LoanInterestIncomeGl) :   @Html.DisplayFor(model => model.LoanInterestIncomeGl.AccountName)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.LoanInterestExpenseGl) :   @Html.DisplayFor(model => model.LoanInterestExpenseGl.AccountName)
                    </p>

                    <p>
                        @Html.DisplayNameFor(model => model.LoanInterestReceivableGl) :   @Html.DisplayFor(model => model.LoanInterestReceivableGl.AccountName)
                    </p>

                </div>
            </div>

        </div>

        <div class="d-flex">
            <a asp-action="Edit" class="m-2">Edit Configuration</a>

            @*  <a asp-action="Details" class="m-2"> Details</a> *@
            <a asp-action="Delete" class="m-2"> Delete Configuration</a>
            <a asp-action="RunEOD" class="m-2">Run EOD</a>
        </div>

    </div>
}
else
{
    <div style="margin-left:20%">
        <a asp-action="Create">Create Configuration</a>
    </div>
}