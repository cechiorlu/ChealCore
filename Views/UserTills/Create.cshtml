@model ChealCore.Models.UserTill

@{
    ViewData["Title"] = "Create User Till Account";
}

<div class="container">
    <div class="my-3">
        <a asp-action="Index" class="nav-link active px-0"><i class="bi bi-arrow-left"></i> Back</a>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal mx-auto w-50">
            <h4>Assign A Till To User</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.UserId, "Select a user", htmlAttributes: new { @class = "control-label col-md-4 my-1" })
                <div class="col">
                    @Html.DropDownList("UserId", ViewBag.Users as SelectList, "--select--", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.GlAccountID, "Select a Till account", htmlAttributes: new { @class = "control-label col-md-4 my-1" })
                <div class="col">
                    @Html.DropDownListFor(model => model.GlAccountID, null, "--select--", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GlAccountID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default btn-primary" />
                </div>
            </div>
        </div>
    }
</div>