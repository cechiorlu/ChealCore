@model ChealCore.Models.GLPosting

@{
    ViewData["Title"] = "Create";
}

<h1 style="margin-left:20%">Post a Transaction</h1>

<div class="row" style="margin:auto;margin-left:20%">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="CreditAmount" class="control-label"></label>
                <input asp-for="CreditAmount" class="form-control" />
                <span asp-validation-for="CreditAmount" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="DebitAmount" class="control-label"></label>
                <input asp-for="DebitAmount" class="form-control" />
                <span asp-validation-for="DebitAmount" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Narration" class="control-label"></label>
                <textarea asp-for="Narration" class="form-control"></textarea>
                <span asp-validation-for="Narration" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="DrGlAccountID" class="control-label"></label>
                <select asp-for="DrGlAccountID" class="form-control" asp-items="ViewBag.DrGlAccountID"></select>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="CrGlAccountID" class="control-label"></label>
                <select asp-for="CrGlAccountID" class="form-control" asp-items="ViewBag.CrGlAccountID"></select>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="PostInitiatorId" class="control-label"></label>
                <input asp-for="PostInitiatorId" class="form-control" />
                <span asp-validation-for="PostInitiatorId" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:20px">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Approved">Approved</option>
                    <option value="Pending">Pending</option>
                    <option value="Declined">Declined</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Transaction" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:20%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
