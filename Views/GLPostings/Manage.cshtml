@model ChealCore.Models.GLPosting

@{
    ViewData["Title"] = "Manage";
}

<div class="container">
    <div class="my-3">
        <a asp-action="Index" class="nav-link active px-0"><i class="bi bi-arrow-left"></i> Back</a>
    </div>
    <form asp-action="Manage" class="mx-auto w-50">
        <h4>Manage Post Status</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <input asp-for="DebitAmount" class="form-control" hidden/>
        <input asp-for="CreditAmount" class="form-control" hidden/>
        <textarea asp-for="Narration" class="form-control" hidden></textarea>
        <input asp-for="Date" class="form-control" hidden/>
        <select asp-for="DrGlAccountID" class="form-control" asp-items="ViewBag.DrGlAccountID" hidden></select>
        <select asp-for="CrGlAccountID" class="form-control" asp-items="ViewBag.CrGlAccountID" hidden></select>
        <input asp-for="PostInitiatorId" class="form-control" hidden />


        <div class="form-group mb-3">
            <label asp-for="Status" class="control-labe my-2l"></label>
            <select asp-for="Status" class="form-control">
                <option value="Approved">Approved</option>
                <option value="Pending">Pending</option>
                <option value="Declined">Declined</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
