
@model IEnumerable<ChealCore.Models.ViewModels.TillToUserViewModel>

@{
    ViewBag.Title = "Index";
}


<div class="container mt-5">
    <h4>Tellers</h4>
    <hr />
    <button class="btn btn-primary" style="float:right;">
        @Html.ActionLink("Assign Till To Teller", "Create")
    </button>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GLAccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountBalance)
                </th>
                <th>
                    Teller
                </th>
                <th>
                </th>
                <th>
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                @if (item.AccountBalance != "NIL")
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.GLAccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @if (item.HasDetails)
                            {
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                                @*<button> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>*@
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>
