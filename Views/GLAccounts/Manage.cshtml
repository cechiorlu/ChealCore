@model ChealCore.Models.GLAccount

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="my-3">
        <a asp-action="Index" class="nav-link active px-0"><i class="bi bi-arrow-left"></i> Back</a>
    </div>
    <form asp-action="Manage" class="w-50 mx-auto">
        <h4>Manage GL Account</h4>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group mb-3">
            <label asp-for="AccountName" class="control-label mb-2"></label>
            <input asp-for="AccountName" class="form-control" />
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CodeNumber" class="control-label mb-2"></label>
            <input asp-for="CodeNumber" class="form-control" />
            <span asp-validation-for="CodeNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="AccountBalance" class="control-label mb-2"></label>
            <input asp-for="AccountBalance" class="form-control" />
            <span asp-validation-for="AccountBalance" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="GLCategoryID" class="control-label mb-2"></label>
            <select asp-for="GLCategoryID" class="form-control" asp-items="ViewBag.GLCategoryID"></select>
            <span asp-validation-for="GLCategoryID" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="BranchID" class="control-label mb-2"></label>
            <select asp-for="BranchID" class="form-control" asp-items="ViewBag.BranchID"></select>
            <span asp-validation-for="BranchID" class="text-danger"></span>
        </div>
        <div class="form-group form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsActivated" /> @Html.DisplayNameFor(model => model.IsActivated)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
