@model ChealCore.Models.ViewModels.RoleClaimViewModel

@{
    var roleId = ViewBag.RoleId;
}


<form method="post" class="w-25" style="margin:auto;margin-top:50px;">
    <div class="card">
        <div class="card-header">
            <h2>Manage Role Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@Model.RoleId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>