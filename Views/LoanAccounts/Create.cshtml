@model ChealCore.Models.LoanAccount

@{
    ViewData["Title"] = "Create";
}

<h4 style="margin:30px;">Create Loan Account</h4>

<div class="row" style="margin-left:14%">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerAccountId" class="control-label"></label>
                <select asp-for="CustomerAccountId" class="form-control" asp-items="ViewBag.CustomerAccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanAmount" class="control-label"></label>
                <input asp-for="LoanAmount" class="form-control" />
                <span asp-validation-for="LoanAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanTerms" class="control-label"></label>
                <select asp-for="LoanTerms" class="form-control">
                    <option value="Fixed">Fixed</option>
                    <option value="Reducing">Reducing </option>
                </select>
                <span asp-validation-for="LoanTerms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfYears" class="control-label"></label>
                <input asp-for="NumberOfYears" class="form-control" />
                <span asp-validation-for="NumberOfYears" class="text-danger"></span>
            </div>
            @*    <div class="form-group">
                    <label asp-for="InterestRate" class="control-label"></label>
                    <input asp-for="InterestRate" class="form-control" />
                    <span asp-validation-for="InterestRate" class="text-danger"></span>
                </div>*@
            @*   <div class="form-group">
                    <label asp-for="ServicingAccountNumber" class="control-label"></label>
                    <input asp-for="ServicingAccountNumber" class="form-control" />
                    <span asp-validation-for="ServicingAccountNumber" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="BranchID" class="control-label"></label>
                <select asp-for="BranchID" class="form-control" asp-items="ViewBag.BranchID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-left:14%; margin-top:auto%">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
