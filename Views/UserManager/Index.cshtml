@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<div class="container mt-4">
    <h4>All Users</h4>
    <hr />

    <a class="btn btn-primary mb-3" style="width:auto" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.Action("Index", "UserManager", new { area = "" })">
        Add new user
    </a>

    @foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                @if (user.Email != "cchimzi@appzonegroup.com")
                {
                    <a aasp-controller="UserManager" asp-action="Manage" asp-route-id="@user.Id" class="btn btn-danger">Manage</a>
                }
            </div>
        </div>
    }
</div>
